{
  "extends": "../tsconfig.base.json", // Assuming you have a base config at the monorepo root
  "compilerOptions": {
    "composite": true, // Important for project references
    "outDir": "./dist",
    "rootDir": "./src",
    // ... other frontend-specific compiler options
    "jsx": "react-jsx", // Common for React projects
    "module": "esnext",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    // Ensure this includes your test files if they are part of the build, e.g., "src/**/*.test.ts", "src/**/*.spec.ts"
  ],
  "references": [
    // Correctly references the 'shared' project, assuming it's a sibling of 'frontend'
    { "path": "../shared" }
    // If frontend also needs types from backend, add:
    // { "path": "../backend" }
  ]
}