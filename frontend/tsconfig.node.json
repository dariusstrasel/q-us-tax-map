// q-us-tax-map/frontend/tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023", "DOM"], // Include DOM if needed for server-side DOM manipulation
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true, // Typically true if only used for type checking
    "strict": true
  },
  "include": ["src/**/*.ts", "vite.config.ts"] // Include relevant files
}